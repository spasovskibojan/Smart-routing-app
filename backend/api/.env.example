# OpenRouteService API Key
ORS_API_KEY=your_openroute_api_key_here

# Neon PostgreSQL Database Configuration
DB_HOST=your_neon_host_here
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_PORT=5432

# Django Secret Key (generate a new one for production)
SECRET_KEY=your_secret_key_here

# Debug mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated, include your Render domain)
ALLOWED_HOSTS=localhost,127.0.0.1,your-app.onrender.com

# CORS and CSRF Trusted Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.onrender.com
CSRF_TRUSTED_ORIGINS=http://localhost:5173,https://your-frontend.onrender.com
